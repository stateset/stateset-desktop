# ==============================================================================
# StateSet Desktop Environment Variables
# ==============================================================================
#
# Copy this file to .env and fill in the values for your environment.
# Variables prefixed with VITE_ are exposed to the renderer process.
# Never commit your actual .env file to version control.
#
# ==============================================================================

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------

# Primary API endpoint for the StateSet backend
# Default: https://engine.stateset.cloud.stateset.app
VITE_API_URL=https://engine.stateset.cloud.stateset.app

# Sandbox API URL for isolated code execution environments (optional)
# Used when sandbox features are enabled in Settings
VITE_SANDBOX_API_URL=https://api.sandbox.stateset.app

# Extra `connect-src` entries for the renderer Content Security Policy (optional).
# Space-separated list of origins (e.g. "https://staging.example.com wss://staging.example.com").
VITE_CSP_CONNECT_SRC=

# Allow API key in SSE stream URL query parameter
# Set to true only in development when token endpoint is unavailable
# WARNING: Enabling this in production is a security risk
VITE_ALLOW_STREAM_API_KEY=false

# ------------------------------------------------------------------------------
# Error Tracking (Sentry)
# ------------------------------------------------------------------------------
# Obtain your DSN from https://sentry.io after creating a project
# Both DSNs can be the same - they're separated for flexibility

# Electron main process error tracking
# Used for native crashes, unhandled exceptions in main process
SENTRY_DSN=

# Renderer process error tracking (requires VITE_ prefix)
# Used for React errors, API errors, UI crashes
VITE_SENTRY_DSN=

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------

# Encryption key for electron-store local data
# IMPORTANT: Generate a secure random string (32+ characters)
# Example: openssl rand -base64 32
# If not set in production, a warning will be logged and data stored unencrypted
STORE_ENCRYPTION_KEY=

# ------------------------------------------------------------------------------
# Auto-Updates
# ------------------------------------------------------------------------------

# Disable automatic update checks (useful for development or managed deployments)
# Default: false (updates enabled)
DISABLE_AUTO_UPDATER=false

# ------------------------------------------------------------------------------
# OAuth Integration Credentials
# ------------------------------------------------------------------------------
# Obtain these from each platform's developer portal:
# - Shopify: https://partners.shopify.com -> Create app -> API credentials
# - Gorgias: https://[subdomain].gorgias.com/settings/api -> OAuth Apps
# - Zendesk: https://[subdomain].zendesk.com/admin/apps-integrations/apis/apis/oauth_clients

# Shopify Partner App
# Required scopes: read_orders, write_orders, read_customers, write_customers,
#                  read_products, read_fulfillments, write_fulfillments
# Redirect URI: http://localhost:8234/callback
SHOPIFY_CLIENT_ID=
SHOPIFY_CLIENT_SECRET=

# Gorgias OAuth App
# Required scopes: openid, account:read, tickets:read, tickets:write,
#                  customers:read, customers:write
# Redirect URI: http://localhost:8235/callback
GORGIAS_CLIENT_ID=
GORGIAS_CLIENT_SECRET=

# Zendesk OAuth App
# Required scopes: read, write, tickets:read, tickets:write, users:read, users:write
# Redirect URI: http://localhost:8236/callback
ZENDESK_CLIENT_ID=
ZENDESK_CLIENT_SECRET=

# ------------------------------------------------------------------------------
# Code Signing (Production Builds Only)
# ------------------------------------------------------------------------------
# These should be set in CI/CD secrets, not in local .env files
# See: https://www.electron.build/code-signing

# macOS Code Signing & Notarization
# MAC_CERTS=<base64-encoded-p12-certificate>
# MAC_CERTS_PASSWORD=<certificate-password>
# APPLE_ID=<your-apple-id@email.com>
# APPLE_ID_PASSWORD=<app-specific-password>
# APPLE_TEAM_ID=<your-team-id>

# Windows Code Signing
# WIN_CSC_LINK=<base64-encoded-pfx-certificate>
# WIN_CSC_KEY_PASSWORD=<certificate-password>
