{
  "name": "stateset-desktop",
  "version": "1.0.1",
  "description": "StateSet AI Agent Desktop - Autonomous customer service agents",
  "packageManager": "npm@10.9.3",
  "engines": {
    "node": ">=22.12.0"
  },
  "main": "dist/electron/main.js",
  "author": "StateSet <engineering@stateset.io>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/stateset/stateset-desktop",
  "bugs": {
    "url": "https://github.com/stateset/stateset-desktop/issues"
  },
  "keywords": [
    "electron",
    "ai-agents",
    "customer-service",
    "desktop",
    "stateset",
    "autonomous-agents"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stateset/stateset-desktop.git"
  },
  "scripts": {
    "preflight": "node scripts/preflight-node.js",
    "predev": "npm run preflight",
    "dev": "npm run build:electron && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "prebuild": "npm run preflight",
    "build": "npm run build:electron && npm run build:vite && electron-builder",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:mac": "npm run build:electron && npm run build:vite && electron-builder --mac",
    "build:win": "npm run build:electron && npm run build:vite && electron-builder --win",
    "build:linux": "npm run build:electron && npm run build:vite && electron-builder --linux",
    "preview": "vite preview",
    "prelint": "npm run preflight",
    "lint": "eslint . --ext ts,tsx,mts --report-unused-disable-directives --max-warnings 0",
    "pretypecheck": "npm run preflight",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run preflight",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "pretest:e2e": "npm run preflight",
    "test:e2e": "npm run build:electron && playwright test",
    "test:e2e:visual": "npm run build:electron && playwright test --project=visual",
    "test:e2e:a11y": "npm run build:electron && playwright test --project=accessibility",
    "test:e2e:update-snapshots": "npm run build:electron && playwright test --project=visual --update-snapshots",
    "prerelease": "npm run preflight",
    "release": "npm run build:electron && npm run build:vite && electron-builder --publish always",
    "prepare": "husky",
    "prestorybook": "npm run preflight",
    "storybook": "storybook dev -p 6006",
    "prebuild-storybook": "npm run preflight",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@axe-core/react": "^4.11.0",
    "@sentry/electron": "7.7.1",
    "@tanstack/react-query": "^5.17.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "clsx": "^2.1.0",
    "date-fns": "^3.2.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.303.0",
    "msw": "^2.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.21.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^4.3.6",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@playwright/test": "^1.42.1",
    "@storybook/addon-a11y": "8.6.15",
    "@storybook/addon-actions": "8.6.15",
    "@storybook/addon-docs": "8.6.15",
    "@storybook/addon-essentials": "8.6.15",
    "@storybook/addon-onboarding": "8.6.15",
    "@storybook/react": "8.6.15",
    "@storybook/react-vite": "8.6.15",
    "@storybook/test": "8.6.15",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "5.1.3",
    "@vitest/browser": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "35.7.5",
    "electron-builder": "26.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^17.6.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.0",
    "postcss": "^8.4.33",
    "prettier": "^3.8.0",
    "storybook": "8.6.15",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "6.4.1",
    "vitest": "4.0.18",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "lodash": "4.17.23"
  },
  "build": {
    "appId": "io.stateset.desktop",
    "productName": "StateSet",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "stateset",
      "repo": "stateset-desktop",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "notarize": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signtoolOptions": {
        "signingHashAlgorithms": [
          "sha256"
        ],
        "certificateSubjectName": "StateSet Inc."
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "maintainer": "StateSet <engineering@stateset.io>",
      "desktop": {
        "entry": {
          "StartupNotify": "true",
          "Categories": "Office;Productivity"
        }
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
